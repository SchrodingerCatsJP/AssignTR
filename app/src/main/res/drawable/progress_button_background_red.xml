<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The background of the button (default state) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <!-- Use a specific red color for the background -->
            <solid android:color="@color/red_500" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- The progress bar that will fill up -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <!-- Use a slightly darker red for the progress fill -->
                <solid android:color="@color/red_700" />
                <corners android:radius="4dp" />
            </shape>
        </clip>
    </item>

</layer-list>
